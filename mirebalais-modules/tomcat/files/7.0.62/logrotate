/usr/local/tomcat7/logs/catalina.out  {
  daily
  rotate 7
  size 10M
  copytruncate
  compress
  postrotate
    # reset ownership to comply with directory's permissions
    chown tomcat7.tomcat7 /usr/local/tomcat7/logs/catalina.out.*
  endscript
  notifempty
  missingok
}

/usr/local/tomcat7/logs/*.log {
  daily
  rotate 7
  missingok
  maxage 7
}

